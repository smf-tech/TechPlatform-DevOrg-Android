<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Transparant" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTheme.UCrop" parent="AppTheme">
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TextInputLayoutForLabel" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="RegistrationTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_blue_box</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:theme">@style/TextInputLayoutForLabel</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="EditTextOTP">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="MaterialAlertDialog_rounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="textinputstyleoperator" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="boxStrokeColor">@color/colorstatelistoperator</item>
    </style>

    <style name="TextInputLayoutHintoperator" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>


    <style name="textinputstyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="TextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:fontFamily">@font/opensans</item>
    </style>

    <style name="RegistrationEditTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <!--<item name="android:background">@null</item>-->
    </style>


    <style name="StyleButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="AppStyleButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>
    <style name="AppStyleButtonheight60" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>

    <style name="AppStyleBorderButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <!--<item name="android:background">@drawable/approval_button_border</item>-->
    </style>
    <style name="AppStylePrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_50dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <!--<item name="android:background">@drawable/approval_button_border</item>-->
    </style>
    <style name="AppStyleBorderButtonheight60" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <!--<item name="android:background">@drawable/approval_button_border</item>-->
    </style>

    <style name="StyleLabel">
        <item name="android:background">@drawable/bg_circular_border</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/medium_blue</item>
        <item name="android:fontFamily">@font/opensans</item>
        <item name="android:paddingTop">@dimen/dimen_08dp</item>
        <item name="android:paddingBottom">@dimen/dimen_08dp</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:paddingRight">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_05dp</item>
    </style>

    <style name="GenderTypes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="FormLabel.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FormLabel.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FormSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_45dp</item>
        <item name="android:background">@drawable/bg_blue_box</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_05dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="OtpEditBox">
        <item name="android:layout_width">@dimen/dimen_40dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_margin">@dimen/dimen_07dp</item>
        <item name="android:background">@drawable/bg_transparent_grey_box</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/lighter_grey</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="CardHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_32dp</item>
        <item name="android:background">@drawable/bg_card_label</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="PlannerCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_225dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="FormDashboardCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_100dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_05dp</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:editTextColor">@android:color/holo_red_dark</item>
        <item name="searchViewStyle">@style/AppTheme.Toolbar.SearchView</item>
    </style>

    <style name="AppTheme.Toolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/holo_green_light</item>
        <item name="searchIcon">@android:drawable/ic_menu_search</item>
    </style>

    <style name="StyleStatus">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_status_label</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dimen_05dp</item>
        <item name="android:paddingBottom">@dimen/dimen_05dp</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:paddingRight">@dimen/dimen_15dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_05dp</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#0000FF</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:layout_height">@dimen/dimen_60dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabMode">fixed</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="AppTabLayout" parent="Widget.Design.TabLayout">

        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/brick_red</item>
    </style>

    <!-- for text -->
    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="StyleTextViewLable">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
    </style>

    <style name="StyleTextViewValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:layout_marginTop">@dimen/dimen_02dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
