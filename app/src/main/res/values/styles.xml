<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/medium_blue</item>
        <item name="colorControlNormal">@color/medium_blue</item>
    </style>

    <style name="TextInputLayoutHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextInputLayoutForLabel" parent="Theme.AppCompat.Light">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColorLink">@color/colorPrimaryDark</item>
    </style>

    <style name="RegistrationTextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_blue_box</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:theme">@style/TextInputLayoutForLabel</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="RegistrationEditTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:background">@null</item>
    </style>

    <style name="GenderTypes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="FormLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="FormLabel.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FormLabel.Description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FormSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_45dp</item>
        <item name="android:background">@drawable/bg_blue_box</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_05dp</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:spinnerMode">dialog</item>
    </style>

    <style name="OtpEditBox">
        <item name="android:layout_width">@dimen/dimen_40dp</item>
        <item name="android:layout_height">@dimen/dimen_40dp</item>
        <item name="android:layout_margin">@dimen/dimen_07dp</item>
        <item name="android:background">@drawable/bg_transparent_grey_box</item>
        <item name="android:digits">0123456789</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textSize">@dimen/text_size_22</item>
    </style>

    <style name="NavigationView" >
        <item name="android:listDivider">@color/lighter_grey</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="CardHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_32dp</item>
        <item name="android:background">@drawable/bg_card_label</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="PlannerCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_225dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>
</resources>
