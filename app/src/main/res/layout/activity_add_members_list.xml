<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include
        android:id="@+id/ly_app_bar"
        layout="@layout/app_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/dimen_30dp">

        <LinearLayout
            android:id="@+id/ly_attended_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_attended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_weight="5"
                android:background="@drawable/bg_attened_lable"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_07dp"
                android:paddingBottom="@dimen/dimen_07dp"
                android:textColor="@color/light_green"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_not_attended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_weight="5"
                android:background="@drawable/bg_attened_not_lable"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_05dp"
                android:paddingBottom="@dimen/dimen_05dp"
                android:textColor="@color/brown"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_info_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_attended_tab"
            android:text="@string/add_members_screen_msg"
            android:gravity="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_below="@+id/tv_info_label"
            app:queryHint="Search Here"
            android:background="@drawable/bg_blue_box"
            style="@style/RegistrationEditTextLayout"
            android:iconifiedByDefault="false"></androidx.appcompat.widget.SearchView>

        <RelativeLayout
            android:id="@+id/ly_select_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_view">

            <CheckBox
                android:id="@+id/cb_select_all_members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:text="Select All"
                android:layout_toLeftOf="@+id/cb_select_all_members"
                android:textColor="@color/medium_blue" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_below="@+id/ly_select_all" />

        <Button
            android:id="@+id/bt_apply_filters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="@string/task_add_members"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_22"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</LinearLayout>
