<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter_grey">

    <RelativeLayout
        android:id="@+id/rl_meet_view_pager"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/meet_view_pager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp" />

        <TextView
            android:id="@+id/tv_meet_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:gravity="center_horizontal"
            android:text="BJS Matrimonial Meet"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:id="@+id/button_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:layout_below="@+id/tv_meet_title"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/btn_add_leaves"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_05dp"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:background="@drawable/bg_white_border_grey"
                android:text="@string/view_profiles_btn_label"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/btn_compoff_request"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_05dp"
                android:layout_weight="5"
                android:gravity="center"
                android:padding="@dimen/dimen_10dp"
                android:background="@drawable/bg_white_border_grey"
                android:text="@string/register_profile_btn_label"
                android:textAllCaps="false" />

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_meet_view_pager">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/dimen_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="31 June 2019"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_05dp"
                        android:text="03:00 PM - 07:00 PM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="Pune"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_05dp"
                        android:text="3rd Floor, Muttha Tower, SB road, Pune" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone_black"
                        android:drawablePadding="@dimen/dimen_05dp"
                        android:gravity="center"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:text="Contacts"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:text="Pune"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_05dp"
                        android:text="1000" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!--<com.google.android.material.floatingactionbutton.FloatingActionButton-->
