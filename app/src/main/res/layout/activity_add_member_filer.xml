<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.octopusbjsindia.view.activities.AddMembersFilterActivity">

    <include
        android:id="@+id/profile_toolbar"
        layout="@layout/app_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:fontFamily="@font/opensans"
                android:text="@string/create_filter_screen_msg"/>

            <!--Organization-->
            <!--<TextView-->
                <!--style="@style/FormLabel"-->
                <!--android:text="@string/organization" />-->

            <!--<com.platform.widgets.MultiSelectSpinner-->
                <!--android:id="@+id/sp_user_organization"-->
                <!--style="@style/FormSpinner"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dimen_50dp" />-->

            <!--Project-->

            <!--  <TextView
                  style="@style/FormLabel"
                  android:text="@string/mandatory_project" />

              <com.platform.widgets.MultiSelectSpinner
                  android:id="@+id/sp_project"
                  style="@style/FormSpinner"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dimen_50dp" />-->

            <!--Role-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_user_role"
                style="@style/textinputstyle"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <EditText
                    android:id="@+id/etUserRole"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/mandatory_role"
                    android:inputType="text|textCapWords"
                    android:focusableInTouchMode="false"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--State-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_user_state"
                style="@style/textinputstyle"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <EditText
                    android:id="@+id/etUserState"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/mandatory_state"
                    android:inputType="text|textCapWords"
                    android:focusableInTouchMode="false"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--District-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_user_district"
                style="@style/textinputstyle"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <EditText
                    android:id="@+id/etUserDistrict"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/mandatory_district"
                    android:inputType="text|textCapWords"
                    android:focusableInTouchMode="false"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Taluka-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_user_taluka"
                style="@style/textinputstyle"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <EditText
                    android:id="@+id/etUserTaluka"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/mandatory_taluka"
                    android:inputType="text|textCapWords"
                    android:focusableInTouchMode="false"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--&lt;!&ndash;Cluster&ndash;&gt;-->
            <!--<TextView-->
                <!--android:id="@+id/txt_cluster"-->
                <!--style="@style/FormLabel"-->
                <!--android:text="@string/cluster"-->
                <!--android:visibility="gone"/>-->

            <!--<com.octopusbjsindia.widgets.MultiSelectSpinner-->
                <!--android:id="@+id/sp_cluster"-->
                <!--style="@style/FormSpinner"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/dimen_50dp"-->
                <!--android:visibility="gone"/>-->

            <!--Village-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_user_village"
                style="@style/textinputstyle"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <EditText
                    android:id="@+id/etUserVillage"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/mandatory_village"
                    android:inputType="text|textCapWords"
                    android:focusableInTouchMode="false"
                    tools:ignore="Autofill" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--School-->
            <!--<TextView-->
            <!--style="@style/FormLabel"-->
            <!--android:text="@string/mandatory_school" />-->

            <!--<Spinner-->
            <!--android:id="@+id/sp_user_structure"-->
            <!--style="@style/FormSpinner"-->
            <!--android:prompt="@string/school" />-->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bt_apply_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10dp"
                android:background="@drawable/bg_button"
                android:text="@string/apply_filters"
                android:textAllCaps="false"

                 />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/profile_act_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_profile_act"
            style="@android:style/Widget.DeviceDefault.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:indeterminateOnly="true" />
    </RelativeLayout>
</RelativeLayout>
