<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lighter_grey"
    android:gravity="center"
    tools:ignore="RtlSymmetry">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_300dp"
        android:layout_margin="@dimen/dimen_05dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/dimen_10dp">

        <RelativeLayout
            android:id="@+id/leave_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Eligible"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_margin="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_10dp"
                android:background="@drawable/bg_status_label"
                android:fontFamily="@font/opensans_semibold"/>

            <TextView
                android:id="@+id/tv_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:text="Machine Code"
                android:layout_marginStart="@dimen/dimen_10dp"/>

            <TextView
                android:id="@+id/tv_machine_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_code_label"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:text="ASDE45GT5555"/>

            <TextView
                android:id="@+id/tv_capacity_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_machine_code"
                android:text="Diesel Capacity"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_10dp"/>

            <TextView
                android:id="@+id/tv_capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_capacity_label"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:text="150 Litres"/>

            <TextView
                android:id="@+id/tv_machine_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_status"
                android:layout_alignParentEnd="true"
                android:text="Machine Model"
                android:layout_marginEnd="@dimen/dimen_10dp"/>

            <TextView
                android:id="@+id/tv_machine_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_machine_label"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:text="TATA HOTACHI 2OO"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
