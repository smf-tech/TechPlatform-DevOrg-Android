<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/dimen_145dp"
        android:layout_height="@dimen/dimen_145dp"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="@color/light_blue"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="@dimen/dimen_75dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_status_icon"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:padding="@dimen/dimen_05dp"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_pending_icon_db"/>

            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_status_icon"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="@dimen/dimen_02dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="?android:textColorPrimary"
                android:text="adshadh adjakjd askdjakd asdjna"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_value"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dimen_10dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

