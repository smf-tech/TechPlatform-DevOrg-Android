<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_05dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_05dp"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingBottom="@dimen/dimen_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_07dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dimen_10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/user_profile_pic"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:padding="@dimen/dimen_05dp"
                    android:src="@drawable/ic_user_avatar" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/user_profile_pic">

                    <com.octopus.view.customs.TextViewBold
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/center_view"
                        android:paddingStart="@dimen/dimen_16dp"
                        android:text="Malcom Holding"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_size_title_14"
                        android:textStyle="bold|italic" />

                    <View
                        android:id="@+id/center_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent" />

                    <com.octopus.view.customs.TextViewRegular
                        android:id="@+id/tv_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/center_view"
                        android:paddingStart="@dimen/dimen_16dp"
                        android:text="Captain"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/text_size_description_12"
                        android:textStyle="normal" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

