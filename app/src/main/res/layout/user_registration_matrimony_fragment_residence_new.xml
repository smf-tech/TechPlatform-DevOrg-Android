<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userregistrationmatrimony"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:id="@+id/toolbar_action_view1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/iv_toobar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/ic_back_white"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/toolbar_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginBottom="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text="Educational and Residential details"
            android:fontFamily="@font/opensans_regular"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/toolbar_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/dimen_30dp"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/ic_search"
            android:tint="@color/white"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/toolbar_filter_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="@dimen/dimen_15dp"
            android:src="@drawable/ic_filter_white"
            android:tint="@color/white"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="Educational and Residential details"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="@dimen/dimen_300dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="2dp"
            android:src="@drawable/ic_active3" />

        <!--form start-->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="@dimen/dimen_10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarThumbVertical="@null"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">


                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/textinputstyle"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:id="@+id/et_education"
                            android:hint="Education Category/Qualifications*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/textinputstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:id="@+id/et_qualification_degree"
                            android:hint="Qualification degree*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_occupation_type"
                            android:clickable="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:hint="Occupation type*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_employer"
                            android:inputType="textCapSentences"
                            android:hint="Employer Name/Company Name*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_job_profile"
                            android:hint="Description of Job/Bussiness/work" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_Annual_income"
                            android:clickable="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:hint="Annual income*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_country"
                            android:clickable="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:hint="Country*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_state"
                            android:clickable="false"
                            android:focusable="false"
                            android:longClickable="false"
                            android:hint="State*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_city_town"
                            android:inputType="textCapSentences"
                            android:hint="City/Town*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/textinputstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_address"
                            android:inputType="textCapSentences"
                            android:hint="Address*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_primary_mobile"
                            android:digits="0123456789"
                            android:maxLength="10"
                            android:inputType="phone"
                            android:enabled="false"
                            android:hint="Account Mobile Number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="*(Above account mobile number is your registered mobile number with us and can not be changed.This account mobile number will not be shared with anyone."
                        android:paddingStart="@dimen/dimen_05dp"
                        android:textSize="@dimen/text_size_12"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:digits="0123456789"
                            android:maxLength="10"
                            android:id="@+id/et_primary_mobile_two"
                            android:hint="Communication Mobile Number*" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="*(Above communication mobile number will be shared with your mutually interested candidates and with premium members only.)"
                        android:paddingStart="@dimen/dimen_05dp"
                        android:textSize="@dimen/text_size_12"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <com.google.android.material.textfield.TextInputEditText
                            style="@style/RegistrationEditTextLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/et_primary_email"
                            android:inputType="textEmailAddress"
                            android:hint="Candidates email address*" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:gravity="center"

        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_loadprevious"
            style="@style/AppStyleBorderButton"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="@color/grey_medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_loadnext"
            style="@style/AppStyleBorderButton"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>


</LinearLayout>
