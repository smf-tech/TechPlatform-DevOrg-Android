<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_05dp"
    app:cardBackgroundColor="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/dimen_05dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_07dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/text_size_10">

            <TextView
                android:id="@+id/txt_machine_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concentrator Code - " />

            <TextView
                android:id="@+id/txt_machine_code_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txt_machine_code_title"
                android:text="salkdjakd kajk" />

            <TextView
                android:id="@+id/txt_state_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_machine_code_title"
                android:text="Maharashtra" />

            <TextView
                android:id="@+id/txt_distric_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txt_state_name"
                android:layout_marginStart="@dimen/dimen_25dp"
                android:layout_toEndOf="@+id/txt_state_name"
                android:layout_toRightOf="@+id/txt_state_name"
                android:text="jasdajdjadad" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>