<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_05dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:padding="@dimen/dimen_70dp"
        card_view:cardCornerRadius="@dimen/dimen_05dp"
        card_view:contentPadding="@dimen/dimen_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/group_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/group_list_arrow"
                android:gravity="start"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/text_size_16" />

            <ImageView
                android:id="@+id/group_list_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_05dp"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_down_arrow_light_blue" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
