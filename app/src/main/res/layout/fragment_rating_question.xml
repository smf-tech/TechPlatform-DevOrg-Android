<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text_title"
        android:visibility="visible"
        android:layout_margin="@dimen/dimen_05dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_semibold"
        android:textSize="@dimen/text_size_16"
        android:text="matrix_question fragment" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_min_text"
                android:text="Minimun is 1 Star"
                android:layout_above="@+id/ratingBar"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_50dp"
                android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"
            android:layout_centerInParent="true"
            android:rating="5"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txt_max_text"
                android:text="Minimun is all Stars"
                android:layout_marginTop="@dimen/dimen_50dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ratingBar"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_loadprevious"
                style="@style/AppStyleBorderButton"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:text="@string/previous"
                android:textColor="@color/medium_grey"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_loadnext"
                style="@style/AppStyleBorderButton"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_weight="1"
                android:text="@string/next"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>