<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_user_profile_pic"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:src="@drawable/bg_profile_pic" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_08dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:layout_toEndOf="@+id/iv_user_profile_pic"
        android:fontFamily="@font/opensans_semibold"
        android:text="Bhartiya Jain Sanghatana"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginStart="@dimen/dimen_08dp"
        android:layout_marginTop="@dimen/dimen_05dp"
        android:layout_toEndOf="@+id/iv_user_profile_pic"
        android:fontFamily="@font/opensans_regular"
        android:text="02 Aug 2019"
        android:textSize="@dimen/text_size_11" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_05dp"
        android:layout_marginTop="@dimen/dimen_05dp"
        android:layout_marginEnd="@dimen/dimen_05dp"
        android:layout_marginBottom="@dimen/dimen_05dp"
        android:padding="@dimen/dimen_15dp"
        android:src="@drawable/ic_delete_24" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user_profile_pic"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="@dimen/dimen_12dp"
        app:cardCornerRadius="@dimen/dimen_08dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/ly_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dimen_16dp">
                <!--android:layout_below="@+id/iv_user_profile_pic">-->

                <ImageView
                    android:id="@+id/iv_feed_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_image_holder" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_feed_pic"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_marginTop="@dimen/dimen_16dp"
                    android:fontFamily="@font/opensans_semibold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14"
                    tools:text="@tools:sample/lorem" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_external_url"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:paddingTop="4dp"
                    android:fontFamily="@font/opensans_regular"
                    android:textSize="@dimen/text_size_14"
                    tools:text="@tools:sample/lorem/random" />

                <TextView
                    android:id="@+id/tv_external_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:fontFamily="@font/opensans_regular"
                    android:maxLines="2"
                    android:paddingTop="4dp"
                    android:textColor="@color/colorAccent"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="@dimen/text_size_12"
                    tools:text="@tools:sample/lorem/random" />

                <TextView
                    android:id="@+id/see_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read more"
                    android:clickable="true"
                    android:layout_marginHorizontal="@dimen/dimen_16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tv_description"
                    android:background="?selectableItemBackground"
                    android:layout_gravity="end"
                    android:textColor="@color/colorPrimary"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_main"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="8dp"
                    android:textColor="?android:textColorPrimary"
                    android:background="@drawable/rounded_corner_background"
                    android:drawableStart="@drawable/ic_insert_comment_24"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="234" />


                <TextView
                    android:id="@+id/tv_share_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_share_24"
                    android:drawablePadding="8dp"
                    android:padding="12dp"
                    android:textColor="?android:textColorPrimary"
                    android:text="234" />


                <TextView
                    android:id="@+id/tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_favorite_24"
                    android:drawablePadding="8dp"
                    android:padding="12dp"
                    android:textColor="?android:textColorPrimary"
                    android:text="234" />


            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/card"
        android:layout_marginTop="6dp"
        android:background="@color/google_in" />
    <!--</RelativeLayout>-->
    <!--</androidx.cardview.widget.CardView>-->
</RelativeLayout>