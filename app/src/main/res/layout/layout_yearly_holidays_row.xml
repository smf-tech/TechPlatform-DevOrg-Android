<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_holiday_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diwali Holidays"
        android:padding="@dimen/dimen_10dp"
        android:fontFamily="@font/opensans"
        android:textColor="@color/attendance_list_item"
        android:textSize="@dimen/text_size_16" />

    <TextView
        android:id="@+id/tv_holiday_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:text="22 Jun @019"
        android:textColor="@color/attendance_list_item"
        android:textSize="@dimen/text_size_16"
        android:fontFamily="@font/opensans"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/iv_dotted_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_03dp"
        android:layout_below="@+id/tv_holiday_text"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:contentDescription="@string/content_description"
        android:layerType="software"
        android:src="@drawable/dotted_line"/>

</RelativeLayout>
