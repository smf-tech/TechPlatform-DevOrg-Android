<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/dimen_05dp"
        app:cardCornerRadius="@dimen/dimen_05dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_status_icon"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:padding="@dimen/dimen_05dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/text_status_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_status_icon"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_40"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_status_count"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/opensans_regular"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_size_12"
                android:layout_marginBottom="@dimen/dimen_10dp"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>