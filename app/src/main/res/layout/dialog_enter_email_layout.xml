<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/txt_dialog_title"
            android:gravity="center_horizontal"
            android:textColor="@color/grey_medium"
            android:text="Enter Email Id"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:textSize="@dimen/text_size_16"/>

        <EditText
            android:id="@+id/edt_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_margin="@dimen/text_size_16"
            android:layout_marginTop="10dp"
            android:hint="Please enter email Id here."
            android:textColor="@color/black"
            android:textStyle="normal"
            android:fontFamily="@font/opensans_regular"
            android:gravity="left|center_vertical"
            android:inputType="textShortMessage|textMultiLine"
            android:padding="@dimen/dimen_05dp"
            android:maxLength="200"
            android:textSize="@dimen/text_size_16"

            android:background="@drawable/bg_grey_box"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                style="@style/AppStyleBorderButton"
                android:layout_width="wrap_content"
                android:text="email Pre Feedback"
                android:layout_weight="1"
                android:visibility="visible"
                android:id="@+id/btn_pre_feedback"
                android:layout_margin="@dimen/dimen_10dp"
                />
            <!--<com.google.android.material.button.MaterialButton-->
            <!--android:id="@+id/btn_reject"-->
            <!--style="@style/AppStyleBorderButton"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginStart="@dimen/dimen_10dp"-->
            <!--android:layout_marginEnd="@dimen/dimen_10dp"-->
            <!--android:layout_marginTop="@dimen/dimen_10dp"-->
            <!--android:layout_weight="1"-->
            <!--android:text="Reject"-->
            <!--android:textColor="@color/medium_grey"-->
            <!--/>-->

            <com.google.android.material.button.MaterialButton
                style="@style/AppStyleBorderButton"
                android:layout_width="wrap_content"
                android:text="email Post Feedback"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_post_feedback"
                android:layout_margin="@dimen/dimen_10dp"
                />
            <com.google.android.material.button.MaterialButton
                style="@style/AppStyleBorderButton"
                android:layout_width="wrap_content"
                android:text="Email Data"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                android:id="@+id/btn_submit"
                android:layout_margin="@dimen/dimen_10dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>