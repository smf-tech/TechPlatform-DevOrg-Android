<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tasks_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/events_card_view"
        style="@style/PlannerCard">

        <RelativeLayout
            android:id="@+id/ly_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radio_group_filter"
            android:visibility="visible">


            <TextView
                android:id="@+id/tv_no_events_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:text="@string/no_events"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_event_label"
                style="@style/CardHeader"
                android:text="@string/today_tasks" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/card_fotter"
                android:layout_below="@+id/tv_event_label"
                android:layout_margin="@dimen/dimen_10dp" />
            <RelativeLayout
                android:id="@+id/card_fotter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    android:id="@+id/tv_all_events_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/all_tasks"
                    android:textColor="@color/tab_selector"
                    android:textSize="@dimen/text_size_16" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/bt_add_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_alignParentRight="true"
                    android:src="@android:drawable/ic_input_add"
                    android:tint="@color/white"
                    app:backgroundTint="@color/tab_selector"
                    app:fabSize="mini"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>