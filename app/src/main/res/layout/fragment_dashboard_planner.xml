<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lighter_grey"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_today_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_15dp"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginRight="@dimen/dimen_15dp"
                android:textSize="@dimen/text_size_22" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/lighter_grey">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/attendance_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_12dp">

                        <FrameLayout
                            android:id="@+id/fly_attendance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_attendance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@color/planner_lable"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp"
                    android:text="@string/mark_attendance"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <!--   <RelativeLayout
                   xmlns:android="http://schemas.android.com/apk/res/android"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/lighter_grey">

                   <androidx.cardview.widget.CardView
                       android:id="@+id/events_card_view"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/dimen_225dp"
                       android:layout_marginStart="@dimen/dimen_25dp"
                       android:layout_marginTop="@dimen/dimen_32dp"
                       android:layout_marginEnd="@dimen/dimen_15dp">

                       <FrameLayout
                           android:id="@+id/fly_events"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                       </FrameLayout>
                   </androidx.cardview.widget.CardView>


               </RelativeLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighter_grey">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/events_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_225dp"
                        android:layout_marginStart="@dimen/dimen_25dp"
                        android:layout_marginTop="@dimen/dimen_32dp"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:layout_marginBottom="@dimen/dimen_05dp">

                        <FrameLayout
                            android:id="@+id/fly_events"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_event_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@color/planner_lable"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp"
                    android:text="@string/today_events"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighter_grey">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/tasks_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_225dp"
                        android:layout_marginStart="@dimen/dimen_25dp"
                        android:layout_marginTop="@dimen/dimen_32dp"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:layout_marginBottom="@dimen/dimen_05dp"
                        android:visibility="gone">

                        <FrameLayout
                            android:id="@+id/fly_tasks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_task_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@color/planner_lable"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp"
                    android:text="@string/today_tasks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighter_grey">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/leave_card_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/fly_leave"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </androidx.cardview.widget.CardView>
                </FrameLayout>

                <TextView
                    android:id="@+id/tv_leave_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_32dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@color/planner_lable"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:paddingStart="@dimen/dimen_20dp"
                    android:paddingEnd="@dimen/dimen_20dp"
                    android:text="Leave Details"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
