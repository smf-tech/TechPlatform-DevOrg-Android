<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:background="@color/lighter_grey"
    android:paddingBottom="@dimen/dimen_15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_today_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_15dp"
            android:textSize="@dimen/text_size_22" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_grey">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/events_card_view"
                    style="@style/PlannerCard">

                    <FrameLayout
                        android:id="@+id/fly_events"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_event_label"
                style="@style/CardHeader"
                android:text="@string/today_events" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_grey">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/tasks_card_view"
                    style="@style/PlannerCard">

                    <FrameLayout
                        android:id="@+id/fly_tasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_task_label"
                style="@style/CardHeader"
                android:text="@string/today_tasks" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_grey">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/attendance_card_view"
                    style="@style/PlannerCard"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/fly_attendance"
                        android:layout_width="match_parent"
                        android:layout_height="180dp" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_attendance_label"
                style="@style/CardHeader"
                android:text="@string/mark_attendance" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lighter_grey">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/leave_card_view"
                    style="@style/PlannerCard"
                    android:layout_height="180dp">

                    <FrameLayout
                        android:id="@+id/fly_leave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_leaves_label"
                style="@style/CardHeader"
                android:text="@string/leave_details" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
