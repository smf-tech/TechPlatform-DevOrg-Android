<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background_color"
    android:orientation="vertical"
    tools:context=".view.fragments.MissionRahat.MissionRahatFragment">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fb_machine_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:text="Machine List"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:icon="@drawable/ic_create_machine"
        app:iconTint="@color/white"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fb_approval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:text="Approvals"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:icon="@drawable/ic_approvals_icon_db"
        app:iconTint="@color/white"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fb_requirement_form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:text="Requirement Form"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:icon="@drawable/ic_new_form_icon"
        app:iconTint="@color/white"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fb_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:text="New Hospital"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:icon="@drawable/ic_menu_home"
        app:iconTint="@color/white"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fb_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        android:text="New Machine"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:icon="@drawable/ic_create_machine"
        app:iconTint="@color/white"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="mini"
        app:tint="@color/white"
        tools:ignore="RelativeOverlap" />

</RelativeLayout>