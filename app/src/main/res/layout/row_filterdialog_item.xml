<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/lyt_select_filter"
    android:background="?selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_filters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="@dimen/text_size_title_14"
            tools:text="sample title text" />
        <!--<CheckBox-->
        <!--android:layout_width="wrap_content"-->
        <!--android:checked="true"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:id="@+id/cb_select_filter"-->
        <!--android:backgroundTint="@color/colorPrimary"-->
        <!--android:buttonTint="@color/colorPrimary"-->
        <!--android:layout_marginStart="@dimen/dimen_10dp"-->
        <!--android:layout_marginEnd="@dimen/dimen_10dp"-->
        <!--android:layout_marginTop="@dimen/dimen_05dp"-->
        <!--android:layout_marginBottom="@dimen/dimen_05dp"-->
        <!--android:layout_height="wrap_content" />-->
        <ImageView
            android:id="@+id/bt_select_filter"
            android:layout_width="30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dimen_05dp"
            android:background="@drawable/ic_custom_unchecked" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_10dp"
        android:background="@drawable/dotted_line" />
</LinearLayout>