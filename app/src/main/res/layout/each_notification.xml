<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_05dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/dimen_05dp">

        <RelativeLayout
            android:id="@+id/row_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:layout_marginStart="@dimen/dimen_05dp"
                android:text="Title"/>

            <ImageView
                android:id="@+id/row_img"
                android:layout_width="@dimen/dimen_20dp"
                android:layout_height="@dimen/dimen_20dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/crop__ic_cancel"
                android:layout_marginEnd="@dimen/dimen_05dp"/>
            <TextView
                android:id="@+id/tv_Detels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:textColor="@color/black"
                android:layout_margin="@dimen/dimen_05dp"
                android:text="text"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>