<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.CompletedFormsFragment">

    <TextView
        android:id="@+id/no_records_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/no_records_available"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:id="@+id/rlt_pending_forms"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginEnd="@dimen/dimen_15dp"
        android:background="@drawable/bg_rounded_rect_gray"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:visibility="gone">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/sync_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:backgroundTint="@android:color/holo_red_dark"
            android:src="@android:drawable/stat_notify_sync"
            app:fabSize="mini"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/txt_pending_forms"
            style="@style/roboto_medium_light_grey_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_marginTop="@dimen/dimen_28dp"
            android:layout_marginBottom="@dimen/dimen_05dp"
            android:text="@string/pending_forms" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_dashboard_pending_forms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_pending_forms" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forms_list"
        android:layout_below="@id/rlt_pending_forms"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>