<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_05dp"
        android:layout_marginBottom="@dimen/dimen_05dp"
        android:maxLines="1"
        android:textSize="@dimen/text_size_14"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        android:fontFamily="@font/opensans"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/tv_member_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_member_name"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:textColor="@color/light_grey"
        android:fontFamily="@font/opensans"
        android:textSize="@dimen/text_size_11" />

    <CheckBox
        android:id="@+id/cb_select_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_delete"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_03dp"
        android:layout_below="@+id/tv_member_designation"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:contentDescription="@string/content_description"
        android:layerType="software"
        android:src="@drawable/dotted_line" />
</RelativeLayout>
