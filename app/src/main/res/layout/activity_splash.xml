<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".view.activities.SplashActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_logo"
        android:layout_marginTop="@dimen/dimen_150dp"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_splash" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dimen_40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/powered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_16"
            android:text="Version"/>
        <TextView
            android:id="@+id/by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/powered"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dimen_05dp"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/text_size_20"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:text="Octopus"/>
    </RelativeLayout>

</RelativeLayout>