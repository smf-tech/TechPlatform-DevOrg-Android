<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.octopusbjsindia.view.activities.CreateStructureActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_05dp"
            android:orientation="vertical">

            <!--state-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_state"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/mandatory_state"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>


            <!--district-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                app:hintTextAppearance="@style/TextInputLayoutHint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_district"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/mandatory_district"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--taluka-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_taluka"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/mandatory_taluka"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--host village-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_host_village"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/host_village"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--host village population-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_host_village_population"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/host_village_pop"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--catchment villages-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_catchment_village"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/catchment_villages"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--catchment village population-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_catchment_village_population"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/catchment_villages_pop"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--gat no-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_gat_no"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/gat_no"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Water Shed No.-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_water_shed_no"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/water_shed"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Area (If Required)-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                app:suffixText="hectare">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_area"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/area"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Structure Name-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_structure_name"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                    android:hint="@string/structure_name"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Structure owner department-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_structure_owner_department"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="@string/structure_owner_dep"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Sub Structure owner department (Sub Type as per Adm approval)-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_sub_structure_owner_department"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Sub Structure owner department"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Details when "NOTA" is selected as department-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_nota_detail"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NOTA Details"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Intervention-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_intervention"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Select Intervention *"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Structure Category / Type-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_structure_type"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Structure Category / Type *"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Structure Work Type-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_structure_work_type"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Structure Work Type"
                    android:imeOptions="actionNext"
                    android:longClickable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Technical Sanction Number-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_technical_sanction_no"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Technical Sanction Number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="10" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Technical Sanction Date-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_technical_sanction_date"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="Technical Sanction Date"
                    android:imeOptions="actionNext"
                    android:inputType="text|textCapWords"
                    android:longClickable="false" />

                <!--Administrative Approval Number-->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textinputstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_03dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_administrative_approval_no"
                        style="@style/RegistrationEditTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Administrative Approval Number"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:maxLength="10" />
                </com.google.android.material.textfield.TextInputLayout>
                <!--Administrative Approval Date-->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textinputstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                    android:layout_margin="@dimen/dimen_03dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_administrative_approval_date"
                        style="@style/RegistrationEditTextLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:hint="Administrative Approval Date"
                        android:imeOptions="actionNext"
                        android:inputType="text|textCapWords"
                        android:longClickable="false" />
                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.textfield.TextInputLayout>
            <!--Administrative Estimate  Amount-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_administrative_estimate_amount"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Administrative Estimate Amount"
                    android:imeOptions="actionNext"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Approximate Working Hours-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_approximate_working_hours"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approximate Working Hours"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Approximate Diesel Consumption in Liters-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_approximate_diesel_liters"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approximate Diesel Consumption in Liters"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Approximate Diesel Consumption in Rs-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_approximate_diesel_consumption_amount"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approximate Diesel Consumption in Rs"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="7" />
            </com.google.android.material.textfield.TextInputLayout>
            <!--Approximate Estimate Quantity (CuM)-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_approximate_estimate_quantity"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sanctioned Silt Quantity (CuM)"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="5" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Approximate potential silt excavation capacity of structure -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_potential_silt_quantity"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Approximate Potential Silt Quantity (CuM)"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--Remark-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_03dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_remark"
                    style="@style/RegistrationEditTextLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "
                    android:hint="Remark"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine"
                    android:singleLine="false" />
                />
            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/structure_img1"
                        android:layout_width="@dimen/dimen_160dp"
                        android:layout_height="@dimen/dimen_160dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_add_img" />

                    <ProgressBar
                        android:id="@+id/progress_1"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/structure_img1"
                        android:layout_centerHorizontal="true"
                        android:text="Struture image 1" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/structure_img2"
                        android:layout_width="@dimen/dimen_160dp"
                        android:layout_height="@dimen/dimen_160dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_add_img" />
                    <ProgressBar
                        android:id="@+id/progress_2"
                        android:layout_width="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/structure_img2"
                        android:layout_centerHorizontal="true"
                        android:text="Struture image 2" />
                </RelativeLayout>

            </LinearLayout>


            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginHorizontal="@dimen/dimen_05dp"
                android:text="@string/submit" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/ly_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_profile_act"
            style="@android:style/Widget.DeviceDefault.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:focusable="true"
            android:indeterminateOnly="true" />
    </RelativeLayout>
</RelativeLayout>
