<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_10dp"
    android:layout_marginEnd="@dimen/dimen_10dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/tv_module_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/opensans_regular"
        android:textColor="?android:textColorPrimary" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_module_title"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/opensans_regular" />

        <com.budiyev.android.circularprogressbar.CircularProgressBar
            android:id="@+id/pb_analytics"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_10dp"
            app:animateProgress="true"
            app:backgroundStrokeColor="@color/lighter_grey"
            app:backgroundStrokeWidth="3dp"
            app:drawBackgroundStroke="true"
            app:foregroundStrokeCap="butt"
            app:foregroundStrokeColor="@color/cyan"
            app:foregroundStrokeWidth="5dp"
            app:indeterminate="false"
            app:indeterminateMinimumAngle="45"
            app:indeterminateRotationAnimationDuration="1200"
            app:indeterminateSweepAnimationDuration="600"
            app:maximum="100"
            app:progress="00"
            app:progressAnimationDuration="100"
            app:startAngle="270" />

    </RelativeLayout>
</RelativeLayout>