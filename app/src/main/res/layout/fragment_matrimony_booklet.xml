<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_booklet_temp1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_200dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_margin="@dimen/dimen_20dp">
        <View
            android:id="@+id/iv_booklet1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:background="@drawable/ic_matrimony_booklet_temp_one"/>

        <View
            android:id="@+id/iv_booklet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:background="@drawable/ic_matrimony_booklet_temp_two"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_200dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/ll_booklet_temp1"
        android:layout_margin="@dimen/dimen_10dp">

        <View
            android:id="@+id/iv_booklet3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:background="@drawable/ic_matrimony_booklet_temp_one"/>

        <View
            android:id="@+id/iv_booklet4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_create_booklet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppStyleButton"
        android:padding="@dimen/dimen_20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_100dp"
        android:text="Create Booklet"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>