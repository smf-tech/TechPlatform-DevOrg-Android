<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="8dp"
    android:layout_marginTop="@dimen/dimen_05dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:id="@+id/report_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_05dp">

        <TextView
            android:id="@+id/report_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_05dp"
            android:gravity="start"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:id="@+id/report_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_name"
            android:layout_marginStart="@dimen/dimen_05dp"
            android:gravity="start"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>
</android.support.v7.widget.CardView>