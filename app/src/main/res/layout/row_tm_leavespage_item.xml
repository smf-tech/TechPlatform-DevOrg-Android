<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/dimen_10dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"

            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_leave_category"
                android:text="djkhfjs"
                android:layout_toLeftOf="@+id/tv_value"
                android:layout_margin="@dimen/dimen_10dp"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_leave_type"
                android:text="jhsdhasd"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/dimen_10dp"
                android:textSize="@dimen/text_size_16"
                android:layout_height="wrap_content" />
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"

                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_startdate"
                    android:text="djkhfjs"
                    android:layout_toLeftOf="@+id/tv_value"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/tv_enddate"
                    android:text="jhsdhasd"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"

                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_leave_reason"
                    android:text="djkhfjs"
                    android:layout_toLeftOf="@+id/tv_value"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:text="Reject"
                    android:id="@+id/btn_reject"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textSize="@dimen/text_size_16"

                    android:layout_toLeftOf="@+id/btn_approve"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="wrap_content"
                    android:text="Approve"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textSize="@dimen/text_size_16"
                    android:id="@+id/btn_approve"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

