<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dimen_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <com.platform.view.customs.TextViewRegular
                    android:id="@+id/tv_leave_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@+id/tv_value"
                    android:text="djkhfjs"
                    android:textSize="@dimen/text_size_title_14"
                    android:textStyle="bold" />

                <com.platform.view.customs.TextViewRegular
                    android:id="@+id/tv_leave_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:text="jhsdhasd"
                    android:textSize="@dimen/text_size_title_14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <com.platform.view.customs.TextViewRegular
                    android:id="@+id/tv_startdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@+id/tv_value"
                    android:text="djkhfjs"
                    android:textSize="@dimen/text_size_title_14"
                    android:textStyle="bold" />

                <com.platform.view.customs.TextViewRegular
                    android:id="@+id/tv_enddate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:text="jhsdhasd"
                    android:textSize="@dimen/text_size_title_14"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <com.platform.view.customs.TextViewRegular
                    android:id="@+id/tv_leave_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@+id/tv_value"
                    android:text="djkhfjs"
                    android:textSize="@dimen/text_size_title_14"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_05dp">

                <Button
                    android:id="@+id/btn_reject"
                    style="@style/AppStyleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:layout_toLeftOf="@+id/btn_approve"
                    android:text="Reject"
                    android:textColor="@color/white"
                     />

                <Button
                    android:id="@+id/btn_approve"
                    style="@style/AppStyleButton"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_alignParentEnd="true"
                    android:text="Approve"
                    android:textColor="@color/white"
                     />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

