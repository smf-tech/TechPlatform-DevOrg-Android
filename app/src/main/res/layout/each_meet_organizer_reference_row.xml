<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_10dp"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:fontFamily="@font/opensans"
        android:textColor="@color/attendance_list_item" />

    <TextView
        android:id="@+id/tv_user_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:textColor="@color/attendance_list_item"
        android:fontFamily="@font/opensans"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_user_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:fontFamily="@font/opensans"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_role"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:fontFamily="@font/opensans"
        android:layout_alignParentEnd="true"/>

    <!--<ImageView-->
        <!--android:id="@+id/iv_dotted_line"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dimen_03dp"-->
        <!--android:layout_below="@+id/tv_user_mobile"-->
        <!--android:layout_marginTop="@dimen/dimen_10dp"-->
        <!--android:contentDescription="@string/content_description"-->
        <!--android:layerType="software"-->
        <!--android:src="@drawable/dotted_line"/>-->

</RelativeLayout>
</androidx.cardview.widget.CardView>
