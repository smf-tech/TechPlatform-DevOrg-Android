<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dimen_05dp"
        android:padding="@dimen/dimen_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_05dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_05dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dimen_10dp"
                android:padding="@dimen/dimen_05dp"
                android:src="@drawable/ic_user_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/dimen_05dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_member_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_05dp"
                        android:text="Member Name"
                        android:fontFamily="@font/opensans_bold"
                        android:textSize="@dimen/text_size_16"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/btn_popmenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:visibility="gone"
                        android:textSize="@dimen/text_size_12"
                        android:paddingStart="@dimen/dimen_10dp"
                        android:paddingEnd="@dimen/dimen_10dp"
                        android:paddingBottom="@dimen/dimen_02dp"
                        android:src="@drawable/ic_options_icon"
                        android:drawableEnd="@drawable/ic_options_icon" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_member_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_05dp"
                        android:layout_marginTop="@dimen/dimen_05dp"
                        android:layout_toEndOf="@+id/tv_leave_category"
                        android:drawablePadding="@dimen/dimen_05dp"
                        android:fontFamily="@font/opensans_regular"
                        android:text="Mobile number"
                        android:textSize="@dimen/text_size_title_14" />

                    <ImageView
                        android:layout_width="@dimen/dimen_15dp"
                        android:layout_height="@dimen/dimen_15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen_05dp"
                        android:layout_toRightOf="@+id/tv_member_phone"
                        android:src="@drawable/ic_menu_call" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_mock_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_regular"
                    android:layout_marginStart="@dimen/dimen_05dp"
                    android:layout_marginTop="@dimen/dimen_05dp"
                    android:text="Mock test status"
                    android:visibility="gone"
                    android:textSize="@dimen/text_size_title_14"
                    />
            </LinearLayout>



            <Button
                android:layout_width="wrap_content"
                android:id="@+id/btn_view_members"
                android:text="View member list"
                android:visibility="gone"
                style="@style/AppStyleBorderButton"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <TextView
                android:id="@+id/tv_prefeedback_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:layout_marginBottom="@dimen/dimen_05dp"
                android:layout_margin="@dimen/dimen_05dp"
                android:text=""
                android:fontFamily="@font/opensans_regular"
                android:textSize="@dimen/text_size_16"
                android:textStyle="normal"/>
            <TextView
                android:id="@+id/tv_postfeedback_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:layout_marginBottom="@dimen/dimen_05dp"
                android:layout_margin="@dimen/dimen_05dp"
                android:text=""
                android:fontFamily="@font/opensans_regular"
                android:textSize="@dimen/text_size_16"
                android:textStyle="normal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>


