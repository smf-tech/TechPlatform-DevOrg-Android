<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_structure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="@dimen/dimen_10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="@dimen/dimen_12dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/bg_status_label"
            android:fontFamily="@font/opensans_semibold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="1dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:text="Prepared" />

        <TextView
            android:id="@+id/tv_last_updated_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/tv_status"
            android:fontFamily="@font/opensans"
            android:textColor="?android:textColorPrimary"
            android:visibility="visible"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/opensans"
            android:textSize="@dimen/dimen_10dp"
            android:visibility="gone"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_code_label"
            style="@style/StyleTextViewLabel"
            android:layout_below="@+id/tv_status"
            android:layout_marginTop="8dp"
            android:text="Structure Code" />

        <TextView
            android:id="@+id/tv_structure_code"
            style="@style/TextViewRegularStyle"
            android:layout_width="130dp"
            android:gravity="start"
            android:layout_below="@+id/tv_code_label"
            android:fontFamily="@font/opensans_semibold"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_structure_type"
            style="@style/StyleTextViewLabel"
            android:layout_below="@+id/tv_structure_code"
            android:layout_marginTop="8dp"
            android:text="Structure Type" />

        <TextView
            android:id="@+id/tv_type"
            style="@style/TextViewRegularStyle"
            android:layout_below="@+id/tv_structure_type"
            android:fontFamily="@font/opensans_semibold"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_work_label"
            style="@style/StyleTextViewLabel"
            android:layout_below="@+id/tv_type"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:text="Work Type" />

        <TextView
            android:id="@+id/tv_work_type"
            style="@style/TextViewRegularStyle"
            android:layout_width="130dp"
            android:layout_below="@+id/tv_work_label"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="start"
            android:visibility="gone"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_structure_label"
            style="@style/StyleTextViewLabel"
            android:layout_below="@+id/tv_status"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Structure Name" />

        <TextView
            android:id="@+id/tv_structure_name"
            style="@style/TextViewRegularStyle"
            android:layout_width="210dp"
            android:gravity="end"
            android:layout_below="@+id/tv_structure_label"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/opensans_semibold"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_label"
            style="@style/StyleTextViewLabel"
            android:layout_below="@+id/tv_structure_name"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_label_value"
            style="@style/TextViewRegularStyle"
            android:layout_below="@+id/tv_label"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/opensans_semibold"
            tools:text="12 apr" />

        <TextView
            android:id="@+id/tv_structure_department"
            style="@style/StyleTextViewLabel"
            android:layout_below="@+id/tv_label_value"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Structure Owner Department" />

        <TextView
            android:id="@+id/tv_department"
            style="@style/TextViewRegularStyle"
            android:layout_width="200dp"
            android:layout_below="@+id/tv_structure_department"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="end"
            tools:text="12 apr" />


    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
