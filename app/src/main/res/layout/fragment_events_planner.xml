<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.platform.view.fragments.EventsPlannerFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/events_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary">

                <TextView
                    android:id="@+id/events_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/events_sync_icon"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/dimen_07dp"
                android:visibility="visible"
                android:src="@drawable/ic_sync" />

            <ImageView
                android:id="@+id/home_bell_icon"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/dimen_05dp"
                android:src="@drawable/ic_back_white" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/ly_calender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout"
        android:layout_margin="@dimen/dimen_05dp"
        android:visibility="visible">

        <!--<CalendarView
            android:id="@+id/calendar_View"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp" />-->

        <com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calendarView">
        </com.shrikanthravi.collapsiblecalendarview.widget.CollapsibleCalendar>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_filter_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_calender"
        android:layout_margin="@dimen/dimen_05dp"
        android:visibility="visible"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="My Events"/>
        <TextView
            android:id="@+id/tv_all_events"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:padding="@dimen/dimen_10dp"
            android:text="All Events"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_filter_tab"
        android:layout_margin="@dimen/dimen_05dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_today_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_events"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_no_events_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_today_events"
            android:text="@string/no_events"
            android:layout_marginTop="@dimen/dimen_05dp"
        />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_no_events_msg"
            android:layout_marginTop="@dimen/dimen_05dp">

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_all_events_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_05dp"
            android:text="@string/all_events"
            android:textColor="@color/tab_selector"
            android:textSize="@dimen/text_size_16" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_add_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/rv_events"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</RelativeLayout>
