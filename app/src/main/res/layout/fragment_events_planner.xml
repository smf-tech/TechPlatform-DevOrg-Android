<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.platform.view.fragments.EventsPlannerFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/events_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary">

                <TextView
                    android:id="@+id/events_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

            <ImageView
                android:id="@+id/events_sync_icon"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/dimen_07dp"
                android:src="@drawable/ic_sync"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/home_bell_icon"
                android:layout_width="@dimen/dimen_35dp"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/dimen_05dp"
                android:src="@drawable/ic_back_white" />
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:id="@+id/ly_calender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_bar_layout"
        android:layout_margin="@dimen/dimen_05dp"
        android:visibility="visible">

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mcv_calendarMode="month"
            app:mcv_selectionColor="#00F"
            app:mcv_showOtherDates="all"
            app:mcv_tileHeight="@dimen/dimen_30dp" />

        <ImageView
            android:id="@+id/tv_calendar_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/calendarView"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/dimen_05dp"
            android:paddingLeft="@dimen/dimen_05dp"
            android:paddingRight="@dimen/dimen_05dp"
            android:gravity="center"
            android:src="@drawable/ic_down_arrow_light_blue" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_filter_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_calender"
        android:layout_margin="@dimen/dimen_05dp"
        android:orientation="horizontal"
        android:visibility="visible"
        android:background="#F8F8F8"
        >

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F8F8F8">

            <RadioButton
                android:id="@+id/rb_all_events"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textColor="@drawable/radio_btn_txt_colour"
                android:text="@string/all_events"
                android:drawableTop="@drawable/radio_btn_icon_selector"
                android:button="@android:color/transparent"
                android:gravity="center"/>

            <RadioButton
                android:id="@+id/rb_my_events"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@drawable/radio_btn_txt_colour"
                android:text="@string/my_events"
                android:drawableTop="@drawable/radio_btn_icon_selector"
                android:button="@android:color/transparent"
                android:gravity="center"/>
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly_filter_tab"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_no_events_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_05dp"
            android:text="@string/no_events"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_all_events_list"
            android:layout_below="@+id/tv_no_events_msg"
            android:layout_marginTop="@dimen/dimen_10dp"
           />

        <TextView
            android:id="@+id/tv_all_events_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_20dp"
            android:text="@string/all_events"
            android:textColor="@color/tab_selector"
            android:textSize="@dimen/text_size_16" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/bt_add_events"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:src="@android:drawable/ic_input_add"
            android:tint="@color/white"
            app:backgroundTint="@color/tab_selector"
            app:fabSize="mini" />
    </RelativeLayout>

</RelativeLayout>
