            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_marginEnd="@dimen/dimen_05dp">

                <EditText
                    android:id="@+id/et_machine_state"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/mandatory_state"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/dimen_10dp">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textinputstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                    android:layout_marginEnd="@dimen/dimen_05dp">

                    <EditText
                        android:id="@+id/et_machine_district"
                        style="@style/RegistrationEditTextLayout"
                        android:hint="@string/mandatory_district"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textinputstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                    android:layout_marginStart="@dimen/dimen_05dp">

                    <EditText
                        android:id="@+id/et_machine_taluka"
                        style="@style/RegistrationEditTextLayout"
                        android:hint="@string/mandatory_taluka"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_machine_type"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/machine_type"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_year"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/manufacturing_year" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_arrow_drop_down_24"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_machine_make_model"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/make_model_machine"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_meter_working"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/meter_working"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_rto_number"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/machine_rto_number"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_chasis_number"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/chasis_number"
                    android:maxLength="17"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789 "/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/textinputstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_excavation_capacity"
                    style="@style/RegistrationEditTextLayout"
                    android:hint="@string/excavation_capacity"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

