<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="@dimen/dimen_235dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dimen_10dp">

        <ImageView
            android:id="@+id/iv_user_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_gradient_shape" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/dimen_05dp">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_location"
                android:layout_marginStart="@dimen/dimen_12dp"
                android:fontFamily="@font/opensans_semibold"
                android:maxLength="25"
                android:maxLines="1"
                android:text="Title"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_08dp"
                android:fontFamily="@font/opensans_regular"
                android:singleLine="true"
                android:text="Description"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>