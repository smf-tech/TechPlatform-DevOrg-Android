<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_15dp"
    android:paddingEnd="@dimen/dimen_15dp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    tools:ignore="PrivateResource">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70dp"
        android:layout_margin="@dimen/dimen_05dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/form_status_indicator_width">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/form_status_indicator"
                android:layout_width="@dimen/form_status_indicator_width"
                android:layout_height="wrap_content"
                android:background="@drawable/form_status_indicator_completed" />

            <ImageView
                android:id="@+id/form_image"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:layout_centerVertical="true"
                android:src="@android:drawable/sym_contact_card"/>

            <TextView
                android:id="@+id/form_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/form_image"
                android:text="Z.P. Pri school Khambora Juna"
                android:textAllCaps="true"
                style="@style/FormLabel.Title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/form_image"
                android:layout_below="@id/form_title"
                android:text="on 19 Dec 2018"
                style="@style/FormLabel.Description"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
