<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="05dp"
        android:layout_marginRight="05dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_05dp"
                android:text="asafvasvrvrfvs" />

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/txtName"
                android:fontFamily="@font/opensans_bold"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:text="5.5 MB"
                android:layout_marginTop="@dimen/dimen_05dp" />

            <TextView
                android:id="@+id/txt_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_toEndOf="@+id/txt_size"
                android:layout_marginStart="@dimen/dimen_05dp"
                android:text="Video file"
                android:layout_marginTop="@dimen/dimen_05dp" />

            <FrameLayout
                android:id="@+id/frame_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img_download"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/download_file" />

                <ImageView
                    android:id="@+id/img_share"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:src="@drawable/ic_share"
                    android:visibility="gone" />

            </FrameLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
