<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:left="4dp" android:right="4dp" android:top="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/dark_blue" />
                </shape>
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                </shape>
            </item>
            <item android:right="@dimen/dimen_05dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_down_arrow_light_blue" />
            </item>
        </layer-list>
    </item>
</selector>